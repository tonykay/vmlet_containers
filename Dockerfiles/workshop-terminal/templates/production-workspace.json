{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "workshop-terminal-production-workspace",
        "annotations": {
            "openshift.io/display-name": "Workshop Terminal (Production/Workspace)"
        }
    },
    "parameters": [
        {
            "name": "SESSION_NAME",
            "value": "terminal",
            "required": true
        },
        {
            "name": "NAME_PREFIX",
            "value": "",
            "required": false
        },
        {
            "name": "TERMINAL_IMAGE",
            "value": "quay.io/openshifthomeroom/workshop-terminal:3.4.2",
            "required": true
        },
        {
            "name": "VOLUME_SIZE",
            "value": "1Gi"
        },
        {
            "name": "AUTH_USERNAME",
            "value": ""
        },
        {
            "name": "AUTH_PASSWORD",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{16}"
        },
        {
            "name": "OPENSHIFT_USERNAME",
            "value": ""
        },
        {
            "name": "OPENSHIFT_PASSWORD",
            "value": ""
        },
        {
            "name": "OPENSHIFT_TOKEN",
            "value": ""
        },
        {
            "name": "TERMINAL_ENVVARS",
            "value": ""
        },
        {
            "name": "OC_VERSION",
            "value": ""
        },
        {
            "name": "ODO_VERSION",
            "value": ""
        },
        {
            "name": "KUBECTL_VERSION",
            "value": ""
        }
    ],
    "objects": [
        {
            "kind": "ServiceAccount",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${SESSION_NAME}-user",
                "labels": {
                    "app": "${NAME_PREFIX}${SESSION_NAME}"
                },
                "annotations": {
                    "serviceaccounts.openshift.io/oauth-redirectreference.first": "{\"kind\":\"OAuthRedirectReference\",\"apiVersion\":\"v1\",\"reference\":{\"kind\":\"Route\",\"name\":\"${NAME_PREFIX}${SESSION_NAME}\"}}",
                    "serviceaccounts.openshift.io/oauth-redirecturi.first": "oauth_callback",
                    "serviceaccounts.openshift.io/oauth-want-challenges": "false"
                }
            }
        },
        {
            "kind": "RoleBinding",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${SESSION_NAME}-admin",
                "labels": {
                    "app": "${NAME_PREFIX}${SESSION_NAME}"
                }
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "${NAME_PREFIX}${SESSION_NAME}-user"
                }
            ],
            "roleRef": {
                "name": "admin"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${SESSION_NAME}",
                "labels": {
                    "app": "${NAME_PREFIX}${SESSION_NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": true
                },
                "tags": [
                    {
                        "name": "latest",
                        "from": {
                            "kind": "DockerImage",
                            "name": "${TERMINAL_IMAGE}"
                        }
                    }
                ]
            }
        },
        {
            "kind": "ConfigMap",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${SESSION_NAME}-env",
                "labels": {
                    "app": "${NAME_PREFIX}${SESSION_NAME}"
                }
            },
            "data": {
                "terminal.sh": "${TERMINAL_ENVVARS}"
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${SESSION_NAME}",
                "labels": {
                    "app": "${NAME_PREFIX}${SESSION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "setup-volume",
                                "terminal"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME_PREFIX}${SESSION_NAME}:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${NAME_PREFIX}${SESSION_NAME}",
                    "deploymentconfig": "${NAME_PREFIX}${SESSION_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${NAME_PREFIX}${SESSION_NAME}",
                            "deploymentconfig": "${NAME_PREFIX}${SESSION_NAME}"
                        }
                    },
                    "spec": {
                        "serviceAccountName": "${NAME_PREFIX}${SESSION_NAME}-user",
                        "initContainers": [
                            {
                                "name": "setup-volume",
                                "image": "${NAME_PREFIX}${SESSION_NAME}:latest",
                                "command": [
                                    "/opt/workshop/bin/setup-volume.sh",
                                    "/opt/app-root",
                                    "/mnt/workspace"
                                ],
                                "volumeMounts": [
                                    {
                                        "name": "data",
                                        "mountPath": "/mnt"
                                    }
                                ]
                            }
                        ],
                        "containers": [
                            {
                                "name": "terminal",
                                "image": "${NAME_PREFIX}${SESSION_NAME}:latest",
                                "ports": [
                                    {
                                        "containerPort": 10080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "APPLICATION_NAME",
                                        "value": "${NAME_PREFIX}${SESSION_NAME}"
                                    },
                                    {
                                        "name": "AUTH_USERNAME",
                                        "value": "${AUTH_USERNAME}"
                                    },
                                    {
                                        "name": "AUTH_PASSWORD",
                                        "value": "${AUTH_PASSWORD}"
                                    },
                                    {
                                        "name": "OAUTH_SERVICE_ACCOUNT",
                                        "value": "${NAME_PREFIX}${SESSION_NAME}-user"
                                    },
                                    {
                                        "name": "OPENSHIFT_USERNAME",
                                        "value": "${OPENSHIFT_USERNAME}"
                                    },
                                    {
                                        "name": "OPENSHIFT_PASSWORD",
                                        "value": "${OPENSHIFT_PASSWORD}"
                                    },
                                    {
                                        "name": "OPENSHIFT_TOKEN",
                                        "value": "${OPENSHIFT_TOKEN}"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "mountPath": "/opt/workshop/envvars",
                                        "name": "envvars"
                                    },
                                    {
                                        "name": "data",
                                        "mountPath": "/opt/app-root",
                                        "subPath": "workspace"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "envvars",
                                "configMap": {
                                    "name": "${NAME_PREFIX}${SESSION_NAME}-env",
                                    "defaultMode": 420
                                }
                            },
                            {
                                "name": "data",
                                "persistentVolumeClaim": {
                                    "claimName": "${NAME_PREFIX}${SESSION_NAME}-data"
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${SESSION_NAME}",
                "labels": {
                    "app": "${NAME_PREFIX}${SESSION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "10080-tcp",
                        "protocol": "TCP",
                        "port": 10080,
                        "targetPort": 10080
                    }
                ],
                "selector": {
                    "app": "${NAME_PREFIX}${SESSION_NAME}",
                    "deploymentconfig": "${NAME_PREFIX}${SESSION_NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${SESSION_NAME}",
                "labels": {
                    "app": "${NAME_PREFIX}${SESSION_NAME}"
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${NAME_PREFIX}${SESSION_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "10080-tcp"
                },
                "tls": {
                    "termination": "edge",
                    "insecureEdgeTerminationPolicy": "Redirect"
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME_PREFIX}${SESSION_NAME}-data",
                "labels": {
                    "app": "${NAME_PREFIX}${SESSION_NAME}"
                }
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_SIZE}"
                    }
                }
            }
        }
    ]
}
